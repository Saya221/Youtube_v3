<!DOCTYPE html>
<html>
  <head>
    <title>Youtube Url Sharing App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_tag "application", "data-turbolinks-track": "reload" %>
  </head>
  <body>
    <nav>
      <ul>
        <li><%= link_to "Share a youtube url" %></li>
        <li><%= link_to "Logout", method: :delete %></li>
        <li><%= link_to "Login" %></li>
        <li><%= link_to "Register"  %></li>
      </ul>
    </nav>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
